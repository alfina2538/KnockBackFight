{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "rootDir": "scripts/ts",
    "outDir": "scripts/js"
  },
  "include": ["scripts/ts", "node_modules/@minecraft/server/index.d.ts"],
  "exclude": ["scripts/js"]
}
